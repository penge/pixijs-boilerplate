{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": "off",
    "no-multi-spaces": ["error", { "ignoreEOLComments": true }],
    "no-alert": "off",
    "no-console": "off",
    "comma-spacing": ["error", { "before": false, "after": true }],
    "@typescript-eslint/quotes": ["error", "double"],
    "@typescript-eslint/semi": "error"
  }
}
